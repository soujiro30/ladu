<odoo>
    <data>
        <record id="school_teacher_form_view" model="ir.ui.view">
            <field name="name">school.teacher.form</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <form string="Teacher">
                    <header>
                        <button name="create_user_access" string="Create User Access"
                                type="object" class="oe_highlight" attrs="{'invisible':[('user_check', '=', True)]}"
                                groups="school_management.group_school_principal,school_management.group_school_access_right"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar" options='{"zoom": true, "preview_image":"image_128"}'/>
                        <div class="oe_title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h2><field name="name"/></h2>
                            <label for="identification_id" string="ID No." class="oe_edit_only"/>
                            <h3><field name="identification_id" required="1"/></h3>
                            <field name="user_check" invisible="1"/>
                        </div>
                        <group>
                            <group string="Personal Information">
                                <field name="last_name" required="1"/>
                                <field name="first_name" required="1"/>
                                <field name="middle_name"/>
                                <field name="suffix"/>
                                <field name="phone" required="1"/>
                                <field name="email" required="1" widget="email"/>
                            </group>
                            <group string="School Information">
                                <field name="position_id" required="1" options="{'no_create':True}"/>
                                <field name="school_id" required="1" options="{'no_create':True}"/>
                                <field name="user_id" options="{'no_create':True}" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Other Information">
                                <field name="gender" required="1"/>
                                <field name="birthday" required="1"/>
                                <field name="marital" required="1"/>
                            </group>
                            <group string="Complete Address">
                                <field name="complete_address" nolabel="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="school_teacher_tree_view" model="ir.ui.view">
            <field name="name">school.teacher.tree</field>
            <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <tree string="Teacher Information">
                    <field name="identification_id"/>
                    <field name="last_name"/>
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="email"/>
                    <field name="position_id"/>
                    <field name="school_id"/>
                </tree>
            </field>
        </record>
        
        <record id="school_teacher_filter_view" model="ir.ui.view">
           <field name="name">school.teacher.filter</field>
           <field name="model">school.teacher</field>
            <field name="arch" type="xml">
                <search string="Teacher Information">
                    <field name="identification_id"/>
                    <field name="last_name"/>
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="position_id"/>
                    <field name="school_id"/>
                </search>
           </field>
        </record>
        
        <record id="school_teacher_action_view" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.teacher</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
              </p>
            </field>
        </record>

        <act_window id="school_teacher_access_action"
                    name="Teacher Access Portal"
                    binding_model="school.teacher"
                    res_model="school.teacher.access"
                    binding_views="list"
                    view_mode="form"
                    target="new"
                    context="{'default_res_ids': active_ids}"/>
    </data>
</odoo>