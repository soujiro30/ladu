<odoo>
    <data>
        <record id="slide_channel_inherited_form_view" model="ir.ui.view">
            <field name="name">slide.channel.inherited.form</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_channel_invite']" position="after">
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </xpath>
            </field>
        </record>

        <record id="my_slide_channel_action_view" model="ir.actions.act_window">
            <field name="name">My Courses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">slide.channel</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="slide_channel_tag_group_inherited_form_view" model="ir.ui.view">
            <field name="name">slide.channel.tag.group.inherited.form</field>
            <field name="model">slide.channel.tag.group</field>
            <field name="inherit_id" ref="website_slides.slide_channel_tag_group_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="replace"/>
                <xpath expr="/form/sheet/group" position="after">
                    <notebook>
                        <page string="Section">
                            <field name="tag_ids" nolabel="1" mode="tree">
                                <tree editable="top">
                                    <field name="sequence" widget="handle"/>
                                    <field name="group_sequence" invisible="1"/>
                                    <field name="description"/>
                                    <field name="name" invisible="1"/>
                                    <field name="group_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>