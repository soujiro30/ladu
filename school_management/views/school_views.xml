<odoo>
    <data>
        <record id="school_year_tree_view" model="ir.ui.view">
            <field name="name">school.year.tree</field>
            <field name="model">school.year</field>
            <field name="arch" type="xml">
                <tree string="School Year" editable="top">
                    <field name="name" invisible="1"/>
                    <field name="date_start" required="1"/>
                    <field name="date_stop" required="1"/>
                    <field name="default" invisible="1"/>
                    <button name="set_as_default" string="Set as Default" class="oe_highlight" type="object" attrs="{'invisible': [('default','=', True)]}"/>
                </tree>
            </field>
        </record>

        <record id="school_year_filter_view" model="ir.ui.view">
           <field name="name">school.year.filter</field>
           <field name="model">school.year</field>
            <field name="arch" type="xml">
                <search string="School Year">
                    <field name="name"/>
                </search>
           </field>
        </record>

        <record id="school_year_action_view" model="ir.actions.act_window">
            <field name="name">School Year</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.year</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create your own School Year here!
              </p><p>
                Example of a school year here : S.Y. 2021-2022
              </p>
            </field>
        </record>

        <record id="school_school_form_view" model="ir.ui.view">
            <field name="name">school.school.form</field>
            <field name="model">school.school</field>
            <field name="arch" type="xml">
                <form string="School Information">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="School Name" placeholder="Type the school name"/>
                            <h2><field name="name" required="1"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="school_id" required="1"/>
                                <field name="abbreviation" required="1"/>
                                <field name="principal" required="1"/>
                                <field name="complete_address" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Teachers">
                                <field name="teacher_ids" nolabel="1">
                                    <tree>
                                        <field name="identification_id"/>
                                        <field name="last_name"/>
                                        <field name="first_name"/>
                                        <field name="middle_name"/>
                                        <field name="position_id"/>
                                        <field name="school_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_school_tree_view" model="ir.ui.view">
            <field name="name">school.school.tree</field>
            <field name="model">school.school</field>
            <field name="arch" type="xml">
                <tree string="School Information">
                    <field name="name"/>
                    <field name="school_id"/>
                    <field name="principal"/>
                </tree>
            </field>
        </record>

        <record id="school_school_filter_view" model="ir.ui.view">
           <field name="name">school.school.filter</field>
           <field name="model">school.school</field>
            <field name="arch" type="xml">
                <search string="School Information">
                    <field name="name"/>
                    <field name="school_id"/>
                    <field name="principal"/>
                </search>
           </field>
        </record>

        <record id="school_school_action_view" model="ir.actions.act_window">
            <field name="name">School Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.school</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Add School Information Here!
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>
        
        <record id="school_position_tree_view" model="ir.ui.view">
            <field name="name">school.position.tree</field>
            <field name="model">school.position</field>
            <field name="arch" type="xml">
                <tree string="School Position" editable="top">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="school_position_filter_view" model="ir.ui.view">
           <field name="name">school.position.filter</field>
           <field name="model">school.position</field>
            <field name="arch" type="xml">
                <search string="School Position">
                    <field name="name"/>
                </search>
           </field>
        </record>

        <record id="school_position_action_view" model="ir.actions.act_window">
            <field name="name">School Position</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.position</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create your own School Position here!
              </p><p>
                Example of a school position here : Position 8
              </p>
            </field>
        </record>
    </data>
</odoo>