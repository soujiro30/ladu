<odoo>
    <data>
        <record id="res_users_inherited_form_view" model="ir.ui.view">
            <field name="name">res.users.inherited</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login']" position="after">
                    <label for="grade_id" class="oe_edit_only" string="Grade Level"/>
                     <h2><field name="grade_id" options="{'no_create':True}" /></h2>
                </xpath>
            </field>
        </record>
    </data>
</odoo>