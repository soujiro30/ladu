<odoo>
    <data>
        <record id="module_category_lms" model="ir.module.category">
            <field name="name">LMS</field>
        </record>
        <record id="group_school_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="module_category_lms"/>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_school_teacher" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="module_category_lms"/>
        </record>

        <record id="group_school_principal" model="res.groups">
            <field name="name">Principal</field>
            <field name="category_id" ref="module_category_lms"/>
        </record>

        <record id="group_school_access_right" model="res.groups">
            <field name="name">Access Rights</field>
            <field name="category_id" ref="module_category_lms"/>
        </record>
    </data>
</odoo>