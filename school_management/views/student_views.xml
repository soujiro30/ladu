<odoo>
    <data>
        <record id="school_student_form_view" model="ir.ui.view">
            <field name="name">school.student.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="create_user_access" string="Create User Access"
                                type="object" class="oe_highlight" attrs="{'invisible':[('user_check', '=', True)]}"
                                groups="school_management.group_school_teacher,school_management.group_school_principal,school_management.group_school_access_right"/>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar" options='{"zoom": true, "preview_image":"image_128"}'/>
                        <div class="oe_title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h2><field name="name"/></h2>
                            <label for="identification_id" string="ID No." class="oe_edit_only"/>
                            <h3><field name="identification_id" required="1"/></h3>
                            <field name="user_check" invisible="1"/>
                        </div>
                        <group>
                            <group string="Personal Information">
                                <field name="last_name" required="1"/>
                                <field name="first_name" required="1"/>
                                <field name="middle_name"/>
                                <field name="suffix"/>
                                <field name="phone" required="1"/>
                            </group>
                            <group string="School and Portal Information">
                                <field name="teacher_id" options="{'no_create':True}" required="1"/>
                                <field name="grade_id" options="{'no_create':True}" required="1"/>
                                <field name="year_level_id" options="{'no_create':True}" invisible="1"/>

                                <field name="school_year_id" options="{'no_create':True}" required="1"/>
                                <field name="user_id" options="{'no_create':True}" invisible="1"/>
                            </group>
                            <group string="Other Information">
                                <field name="gender"/>
                                <field name="birthday"/>
                                <field name="marital"/>
                            </group>
                            <group string="Complete Address">
                                <field name="complete_address" nolabel="1"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_student_tree_view" model="ir.ui.view">
            <field name="name">school.student.tree</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree string="Student Information">
                    <field name="identification_id"/>
                    <field name="last_name"/>
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="gender"/>
                    <field name="grade_id"/>
                    <field name="teacher_id"/>
                </tree>
            </field>
        </record>

        <record id="school_student_filter_view" model="ir.ui.view">
           <field name="name">school.student.filter</field>
           <field name="model">school.student</field>
            <field name="arch" type="xml">
                <search string="Student Information">
                    <field name="identification_id"/>
                    <field name="last_name"/>
                    <field name="first_name"/>
                    <field name="middle_name"/>
                    <field name="gender"/>
                    <field name="grade_id"/>
                    <field name="teacher_id"/>
                </search>
           </field>
        </record>

        <record id="school_student_action_view" model="ir.actions.act_window">
            <field name="name">All Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="school_my_student_action_view" model="ir.actions.act_window">
            <field name="name">My Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('teacher_id.user_id', '=', uid)]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <act_window id="school_student_access_action"
                    name="Student Access Portal"
                    binding_model="school.student"
                    res_model="school.student.access"
                    binding_views="list"
                    view_mode="form"
                    target="new"
                    context="{'default_res_ids': active_ids}"/>

        <act_window id="school_student_change_level_action"
                    name="Change Level"
                    binding_model="school.student"
                    res_model="school.student.change.level"
                    binding_views="list"
                    view_mode="form"
                    target="new"
                    context="{'default_res_ids': active_ids}"/>
    </data>
</odoo>