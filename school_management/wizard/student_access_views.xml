<odoo>
    <data>
        <record id="school_student_access_form_view" model="ir.ui.view">
            <field name="name">Student Access Portal</field>
            <field name="model">school.student.access</field>
            <field name="arch" type="xml">
                <form string="Student Access Portal">
                    <footer>
                        <button name="create_user_access" string="Create Access" type="object" class="btn-primary"/>
                        <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="school_student_access_action_view" model="ir.actions.act_window">
            <field name="name">Student Access Portal</field>
            <field name="res_model">school.student.access</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="school_student_change_level_form_view" model="ir.ui.view">
            <field name="name">Change Level</field>
            <field name="model">school.student.change.level</field>
            <field name="arch" type="xml">
                <form string=" ">
                    <group>
                        <label for="teacher_id" string="This process the will change the school information of student." />
                    </group>
                    <group>
                        <group>
                            <field name="teacher_id" options="{'no_create':True}" required="1"/>
                            <field name="school_year_id" options="{'no_create':True}" required="1"/>
                            <field name="grade_id" options="{'no_create':True}" required="1"/>
                         </group>
                    </group>
                    <footer>
                        <button name="change_year_level" string="Change" type="object" class="btn-primary" confirm="Are you sure for this process?"/>
                        <button string="Cancel" type="object" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="school_student_change_level_action_view" model="ir.actions.act_window">
            <field name="name">Change Level</field>
            <field name="res_model">school.student.change.level</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>