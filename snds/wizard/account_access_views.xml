<odoo>
    <data>
        <record id="account_access_form_view" model="ir.ui.view">
            <field name="name">Access Portal</field>
            <field name="model">account.access</field>
            <field name="arch" type="xml">
                <form string="Teacher Access Portal">
                    <footer>
                        <button name="create_user_access" string="Create Access" type="object" class="btn-primary"/>
                        <button string="Cancel" type="object" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="account_access_action_view" model="ir.actions.act_window">
            <field name="name">Access Portal</field>
            <field name="res_model">account.access</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>